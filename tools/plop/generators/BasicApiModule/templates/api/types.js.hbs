export default `
{{#each schema.fields ~}}
{{#compare this.type '===' 'Object'}}
{{#if this.fields}}
type {{ pascalCase @root.singularName }}{{ pascalCase @key }} {
  {{#each this.fields ~}}
    {{#if this.type}}
  {{@key}}: {{cleanGraphqlType this.type}}
    {{/if}}
  {{/each}}
}
{{/if}}
{{/compare}}
{{~/each}}

type {{ pascalCase singularName }} {
{{#each schema.fields ~}}
  {{~#if this.type}}
  {{@key}}: {{#compare this.type '===' 'Object'}}{{ pascalCase @root.singularName }}{{ pascalCase @key }}{{else}}{{cleanGraphqlType this.type}}{{/compare}}
  {{/if~}}
{{~/each}}
}

type {{ pascalCase pluralName }} {
  total: Int
  {{ camelCase pluralName }}: [{{ pascalCase singularName }}]
}

{{#each schema.fields ~}}
{{#compare this.type '===' 'Object'}}
{{#if this.fields}}
input {{ pascalCase @root.singularName }}{{ pascalCase @key }}Input {
  {{#each this.fields ~}}
    {{#if this.type}}
  {{@key}}: {{cleanGraphqlType this.type}}{{#compare this.validate.optional '==' undefined '||' this.validate.optional '==' false}}{{#compare this.defaultValue '==' undefined}}!{{/compare}}{{/compare}}
    {{/if}}
  {{/each}}
}
{{/if}}
{{/compare}}
{{~/each}}

input {{ pascalCase singularName }}Input {
{{#each schema.fields }}
  {{~#compare this.type '&&' this.input}}
  {{@key}}: {{#compare this.type '===' 'Object'}}{{ pascalCase @root.singularName }}{{ pascalCase @key }}Input{{else}}{{cleanGraphqlType this.type}}{{/compare}}{{#compare this.validate.optional '==' undefined '||' this.validate.optional '==' false}}{{#compare this.defaultValue '==' undefined}}!{{/compare}}{{/compare}}
  {{/compare~}}
{{/each~}}
}
`;
