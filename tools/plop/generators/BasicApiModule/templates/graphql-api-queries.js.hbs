{{#*inline "schemaField"}}
  {{#compare this.type 'in' 'String|Int|Float|Number'}}
{{ name }}: [{{cleanGraphqlType this.type}}]
  {{else}}
{{ name }}: {{cleanGraphqlType this.type}}
  {{/compare}}
{{/inline }}
      #### {{ constantCase pluralName }}_QUERY_TYPES_START ####
      {{ camelCase pluralName }}(
        _ids: [String]
        page: Int
        pageSize: Int
        sort: String
        order: String
      {{#if isSearchable}}
        search: String
      {{/if}}
        {{#each schema.fields}}
          {{#compare this.filterable '||' this.queryable }}
            {{#compare this.input 'typeof' 'object'}}
        {{> schemaField this.input}}
             {{else}}
        {{> schemaField name=@key}}
             {{/compare}}
          {{else}}
            {{#if this.groupKey }}
              {{#compare this.input 'typeof' 'object'}}
        {{ this.input.name }}: {{cleanGraphqlType this.input.type}}
              {{else}}
        {{ @key }}: {{cleanGraphqlType this.type}}
              {{/compare}}
            {{/if}}
          {{/compare}}
        {{/each}}
      ): {{ pascalCase pluralName }}
      my{{ pascalCase pluralName }}: [{{ pascalCase singularName }}]
      {{ camelCase singularName }}({{ primaryFieldKey }}: {{ primaryField.type }}{{#compare primaryFieldKey '!==' urlFieldKey }}, {{ urlFieldKey }}: {{ urlField.type }}{{/compare}}): {{ pascalCase singularName }}
      #### {{ constantCase pluralName }}_QUERY_TYPES_END ####