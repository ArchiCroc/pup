#import "../fragments/{{ pascalCase singularName }}s.gql"

query {{ camelCase singularName }} {
  {{ camelCase singularName }} {
    _id
    isPublic
    title
    updatedAt
    createdAt
  }
}

query edit{{ pascalCase singularName }}($_id: String) {
  {{ camelCase singularName }}(_id: $_id) {
    ...{{ pascalCase singularName }}Attributes
  }
}

query {{ camelCase singularName }}($_id: String, $sortBy: String) {
  {{ camelCase singularName }}(_id: $_id) {
    ...{{ pascalCase singularName }}Attributes
    comments(sortBy: $sortBy) {
      _id
      comment
      createdAt
      user {
        _id
        name {
          first
          last
        }
      }
    }
  }
}
