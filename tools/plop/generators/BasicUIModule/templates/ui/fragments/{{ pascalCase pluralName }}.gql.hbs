{{#*inline "schemaFields"}}
  {{#each this ~}}
      {{!-- {{~#compare this.showInTableView '||' this.input }} --}}
    {{#if this.dataIndex}}
{{convertDataIndexToGraphqlSubQuery (concat @key '.' this.dataIndex) 0}}
    {{else}}
        {{#compare this.fields 'typeof' 'object'}}
{{@key}} {
  {{> schemaFields this.fields}}
}  
        {{else}}
{{@key}}
        {{/compare}}  
      {{/if}}
      {{~#compare this.input 'typeof' 'object' '&&' this.input.input 'typeof' 'string'}}
{{this.input.name}}
      {{/compare}}
  {{~/each}}
{{/inline}}
fragment {{ pascalCase singularName }}Attributes on {{ pascalCase singularName }} {
  {{> schemaFields schema.fields}}
}


