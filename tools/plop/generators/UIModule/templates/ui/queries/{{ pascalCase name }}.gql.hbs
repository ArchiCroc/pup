query {{ camelCase name }} {
  {{ camelCase name }} {
    ...{{ pascalCase (singular name) }}Attributes
  }
}

query edit{{ pascalCase (singular name) }}(${{ primaryKeyField }}: {{ primaryKeyField }}{{#compare primaryKeyField '!==' urlKeyField }}, ${{ urlKeyField }}: {{ urlKeyField }}{{/compare}}) {
  {{ camelCase (singular name) }}({{ urlKeyField }}: ${{ urlKeyField }}) {
    ...{{ pascalCase (singular name) }}Attributes
  }
}

