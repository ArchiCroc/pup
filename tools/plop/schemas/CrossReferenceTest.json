{ "name": "CrossReferenceTests",
  "permissions": {
    "read": "admin",
    "save": "admin",
    "delete":"admin"
  },
  "menu": {
    "index": "user"
  },
    
  "fields": {
    "_id": {
      "primaryKey": true,
      "urlKey": true,
      "type": "String",
      "input": "Hidden",
      "validate" : {
        "max": 24,
        "optional": true
      }
    },
    "errorReportId": {
      "type": "String",
      "input": "CrossReferenceSelect",
      "uniforms": {
        "query": "errorReports",
        "edges": "errorReports",
        "labelField": "message",
        "valueField": "_id"
      },
      "showInTableView": false
    },
    "errorReport": {
      "type": "ErrorReport",
      "resolver": "ErrorReportQueries.errorReport",
      "showInTableView": true,
      "dataIndex": "errorReport.message"

    },
    "assignedToId": {
      "type": "String",
      "input": "CrossReferenceSearch",
      "uniforms": {
        "query": "users",
        "edges": "users",
        "labelField": "fullName",
        "valueField": "_id"
      },
      "showInTableView": false
    },
    "assignedTo": {
      "type": "User",
      "dataIndex": "assignedTo.fullName",
      "showInTableView": true
    },
    "preparedById": {
      "type": "[String]",
      "input": "CrossReferenceSearch",
      "uniforms": {
        "query": "users",
        "edges": "users",
        "labelField": "fullName",
        "valueField": "_id",
        "multiple": true
      },
      "showInTableView": false
    },
    "preparedBy": {
      "type": "User",
      "dataIndex": "preparedBy.fullName",
      "showInTableView": true
    },
    "name": {
      "labelKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
        "max": 64
      }
    },
    "description": {
      "type": "String",
      "input": "LongText",
      "validate" : {
        "max": 1024,
        "optional": true
      }
    }
  }
}
