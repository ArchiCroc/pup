        "type": "CollectionBrand",
        "query": "collectionBrands",
        "edges": "collectionBrands",
        "labelKey": "name",
        "valueKey": "slug"
      },      
      "resolver": "CollectionBrandQueries.collectionBrand",
      "showInTableView": true,
      "filterable": true
    },
    "createdAtUTC": {
      "type": "DateTime",
      "showInTableView": "Created At"
    },
     "createdBy": {
      "type": "CrossReference",
      "input": {
        "name": "createdById",
        "type": "String"
      },
      "reference": {
        "type": "User",
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    },
    "updatedAtUTC": {
      "type": "DateTime",
      "showInTableView": "Updated At"
    },
    "updatedBy": {
      "type": "CrossReference",
      "input": {
        "name": "updatedById",
        "type": "String"
      },
      "reference": {
        "type": "User",
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    }
  },
  "defaultSortField": "name",
  "defaultSortOrder": "ascend"
}
