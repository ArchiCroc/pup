{ "name": "Samples",
  "uiFolderName": "demo/samples",
  "permissions": {
    "read": "user",
    "save": "admin",
    "delete": "admin"
  },
  "menu": {
    "index": "admin"
  },    
  "schemaImports": ["import slugify from 'slugify'"],
  "fields": {
    "_id": {
      "primaryKey": true,
      "type": "ObjectID",
      "input": "Hidden",
      "validate" : {
        "max": 24,
        "optional": true
      }
    },
    "name": {
      "labelKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
          "max": 64
      }
    },
    "slug": {
      "urlKey": true,
      "type": "String",
      "input": "ChainedSlug",
      "validate" : {
        "max": 48
      },
      "clean": "(item) => slugify(item, { lower: true})",
      "showInTableView": false,
      "uniforms": {
        "sourceField": "name"
      }
    },
    "weight": {
      "type": "Float",
      "input": "Text",
      "showInTableView": false,
      "validate" : {
          "optional": true
      }
    },
    "year": {
      "type": "Int",
      "input": "Text",
      "showInTableView": false,
      "validate" : {
          "optional": true
      }
    },
    "status": {
      "type": "Int",
      "input": "Select",
      "choices": { "Denied": -1, "Draft": 0, "Ready": 1, "Assigned": 2, "Approved": 3, "In Process": 4, "Processing Error": 5, "Complete": 10, "Canceled": -10 },
      "clean": "(item) => parseInt(item, 10);",
      "filterable": true
    },
    "dimensions": {
      "type": "Object",
      "showInTableView": false,
      "validate" : {
          "optional": true
      },
      "fields": {
        "width": {
          "type": "Float",
          "input": "Text",
          "showInTableView": false,
          "validate" : {
              "optional": true
          }
        },
        "height": {
          "type": "Float",
          "input": "Text",
          "showInTableView": false,  
          "validate" : {
              "optional": true
          }
        },
        "depth": {
          "type": "Float",
          "input": "Text",
          "showInTableView": false,
          "validate" : {
              "optional": true
          }
        }
      }
    },
    "invites": {
      "type": "[Object]",
      "showInTableView": false,
      "validate" : {
          "optional": true
      },
      "fields": {
        "user": {
          "type": "User",
          "input": {
            "name": "userId",
            "type": "String",
            "input": "CrossReferenceSearch"
          },
          "reference": {
            "query": "users",
            "edges": "users",
            "labelKey": "fullName",
            "valueKey": "_id"
          }
        },
        "quantity": {
          "type": "Int",
          "input": "Text",
          "validate" : {
              "optional": true
          }
        }
      }
    },
    "createdAtUTC": {
      "type": "DateTime",
      "showInTableView": false,
      "label": "Created At"
    },
    "createdBy": {
      "type": "User",
      "input": {
        "name": "createdById",
        "type": "String"
      },
      "reference": {
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    },
    "updatedAtUTC": {
      "type": "DateTime",
      "showInTableView": "Updated At"
    },
    "updatedBy": {
      "type": "User",
      "input": {
        "name": "updatedById",
        "type": "String"
      },
      "reference": {
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    }
  },
  "defaultSortField": "name",
  "defaultSortOrder": "ascend"
}
