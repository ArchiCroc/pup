{ "name": "Collection/Sets",
  "permissions": {
    "read": "user",
    "save": "admin",
    "delete": "admin"
  },
  "menu": {
    "index": "admin"
  },    
  "schemaImports": ["import slugify from 'slugify';"],
  "fields": {
    "_id": {
      "primaryKey": true,
      "type": "ObjectID",
      "input": "Hidden",
      "validate" : {
        "max": 24,
        "optional": true
      }
    },
    "name": {
      "labelKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
          "max": 256
      }
    },
    "number": {
      "labelKey": true,
      "label": "Set Number",
      "type": "String",
      "input": "Text",
      "validate" : {
          "max": 8
      }
    },
    "year": {
      "type": "Int",
      "input": "Text",
      "showInTableView": false
      
    },
    "weight": {
      "type": "Float",
      "input": "Text",
      "showInTableView": false,
      "validate" : {
          "optional": true
      }
    },
    "dimensions": {
      "type": "Object",
      "input": "Text",
      "showInTableView": false,
      "validate" : {
          "optional": true
      },
      "fields": {
        "width": {
          "type": "Float",
          "input": "Text",
          "showInTableView": false,
          "validate" : {
              "optional": true
          }
        },
        "height": {
          "type": "Float",
          "input": "Text",
          "showInTableView": false,  
          "validate" : {
              "optional": true
          }
        },
        "depth": {
          "type": "Float",
          "input": "Text",
          "showInTableView": false,
          "validate" : {
              "optional": true
          }
        }
      }
    },
    "themes": {
      "type": "[CollectionTheme]",
      "input": {
        "name": "themeIds",
        "type": "[ObjectID]",
        "input": "CrossReferenceSearch",
        "uniforms": {
          "multiple": true
        }
      },
      "reference": {
        "query": "collectionThemes",
        "edges": "collectionThemes",
        "labelKey": "name",
        "valueKey": "_id"
      },
      "resolver": "(parent, args, context) => CollectionThemeQueries.collectionTheme(parent, { _id: parent.themeIds }, context)",
      "showInTableView": true
    },
    "partCount": {
      "type": "Int",
      "input": "Text",
      "clean": "(item) => parseInt(item, 10);",
      "showInTableView": false
    },
    "inventory": {
      "type": "Object",
      "input": "List",
      "showInTableView": false,
      "fields": {
        "element": {
          "type": "CollectionElement",
          "input": {
            "name": "elementId",
            "type": "ObjectID",
              "input": "CrossReferenceSearch",
              "uniforms": {
                "multiple": true
              }
          },
          "reference": {
            "query": "collectionElements",
            "edges": "collectionElements",
            "labelKey": "name",
            "valueKey": "_id"
          },
          "resolver": "(parent, args, context) => CollectionElementQueries.collectionElement(parent, { _id: parent.elementId }, context)",
          "showInTableView": true,
          "dataIndex": "name"
        },
        "quantity": {
          "type": "Int",
          "input": "Text",
          "showInTableView": false
        },
        "spareQuantity": {
          "type": "Int",
          "input": "Text",
          "defaultValue": 0,
          "showInTableView": false
        }
      }
    },
    "createdAtUTC": {
      "type": "DateTime",
      "showInTableView": "Created At"
    },
     "createdBy": {
      "type": "User",
      "input": {
        "name": "createdById",
        "type": "String"
      },
      "reference": {
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    },
    "updatedAtUTC": {
      "type": "DateTime",
      "showInTableView": "Updated At"
    },
    "updatedBy": {
      "type": "User",
      "input": {
        "name": "updatedById",
        "type": "String"
      },
      "reference": {
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    }
  },
  "defaultSortField": "name",
  "defaultSortOrder": "ascend"
}
