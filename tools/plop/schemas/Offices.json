{ "name": "Offices",
  "permissions": {
    "read":"user",
    "save": "admin",
    "delete":"admin"
  },
  "menu": {
    "index": "admin"
  },

  "schemaImports": ["import moment from 'moment-timezone';"],
    
  "fields": {
    "_id": {
      "primaryKey": true,
      "type": "String",
      "input": "Hidden",
      "validate" : {
        "max": 24,
        "optional": true
      }
    },
    "name": {
      "labelKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
          "max": 64
      }
    },
    "slug": {
      "urlKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
        "max": 48
      },
      "clean": "(item) => item.toLowerCase()",
      "sourceField": "name",
      "sourceModifier": "(item)=> item.dashCase()",
      "showInTableView": false
    },
    "folderName": {
      "labelKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
          "max": 4
      },
      "clean": "(item) => item.toUpperCase()"
    },
    "visionNames": {
      "type": "[String]",
      "input": "Text",
      "validate" : {
          "max": 100,
          "optional": true
      },
      "showInTableView": false
    },
    "ipSubnets": {
      "type": "[String]",
      "input": "Text",
      "validate" : {
          "max": 48,
          "optional": true
      },
      "showInTableView": false
    },
    "projectNumberCode": {
      "type": "String",
      "input": "Text",
      "validate": {
        "max": 3,
        "optional": true
      },
      "showInTableView": false
    },
    "timezone": {
      "type": "String",
      "input": "Select",
      "choices": "moment.tz.names()",
      "validate": {
        "max": 100,
        "optional": true
      }
    },
    "isActive": {
      "type": "Boolean",
      "input": "Bool",
      "defaultValue": true
    },
    "openDate": {
      "type": "Date",
      "input": "Date",
      "validate": {
        "optional": true
      },
      "showInTableView": false
    },
    "closeDate": {
      "type": "Date",
      "input": "Date",
      "validate": {
        "optional": true
      },
      "showInTableView": false
    },
    "itEmailAddress": {
      "type": "String",
      "input": "Text",
      "validate": {
        "regEx": "SimpleSchema.RegEx.Email",
        "max": 64
      },
      "showInTableView": false
    },
    "defaultProjectFolderNameFormat": {
      "type": "String",
      "input": "Select",
      "choices": [
        "${projectName}",
        "${projectNumber}",
        "${projectNumber} ${projectName}",
        "${projectNumber}_${projectName}"
      ],
      "validate": {
        "max": 64
      },
      "showInTableView": false
    },
    "createdAtUTC": {
      "type": "DateTime",
      "showInTableView": "Created At"
    },
    "createdById": {
      "userKey": true,
      "type": "String",
      "index": true,
      "showInTableView": false,
      "showInDetailView": false
    },
    "createdBy": {
      "type": "User",
      "dataIndex": "fullName"
    },
    "updatedAtUTC": {
      "type": "DateTime",
      "showInTableView": "Updated At"
    },
    "updatedById": {
      "userKey": true,
      "type": "String",
      "index": true,
      "showInTableView": false,
      "showInDetailView": false
    },
    "updatedBy": {
      "type": "User",
      "dataIndex": "fullName"
    }
    
  },
  "defaultSortField": "name",
  "defaultSortOrder": "ascend"
}
