{ "name": "Offices",
  "permissions": {
    "read": "user",
    "create": "admin",
    "update": "admin",
    "delete": "admin"
  },
  "menu": {
    "index": "admin"
  },

  "schemaImports": ["import moment from 'moment-timezone';", "import slugify from 'slugify';"],
    
  "fields": {
    "_id": {
      "primaryKey": true,
      "type": "String",
      "input": "Hidden",
      "validate" : {
        "max": 24,
        "optional": true
      }
    },
    "name": {
      "labelKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
          "max": 64
      }
    },
    "slug": {
      "urlKey": true,
      "type": "String",
      "input": "ChainedSlug",
      "validate" : {
        "max": 48
      },
      "clean": "(item) => slugify(item, { lower: true});",
      "showInTableView": false,
      "uniforms": {
        "sourceField": "name"
      }
    },
    "folderName": {
      "labelKey": true,
      "type": "String",
      "input": "Text",
      "validate" : {
          "max": 4
      },
      "clean": "(item) => item.toUpperCase()"
    },
    "visionNames": {
      "type": "[String]",
      "input": "Text",
      "validate" : {
          "max": 100,
          "optional": true
      },
      "showInTableView": false
    },
    "ipSubnets": {
      "type": "[String]",
      "input": "Text",
      "validate" : {
          "max": 48,
          "optional": true
      },
      "showInTableView": false
    },
    "projectNumberCode": {
      "type": "String",
      "input": "Text",
      "validate": {
        "max": 3,
        "optional": true
      },
      "showInTableView": false
    },
    "timezone": {
      "type": "String",
      "input": "Select",
      "choices": "moment.tz.names()",
      "validate": {
        "max": 100,
        "optional": true
      }
    },
    "isActive": {
      "type": "Boolean",
      "input": "Bool",
      "defaultValue": true
    },
    "openDate": {
      "type": "DateTime",
      "input": "Date",
      "validate": {
        "optional": true
      },
      "showInTableView": false
    },
    "closeDate": {
      "type": "DateTime",
      "input": "Date",
      "validate": {
        "optional": true
      },
      "showInTableView": false
    },
    "itEmailAddress": {
      "type": "String",
      "input": "Text",
      "validate": {
        "regEx": "SimpleSchema.RegEx.Email",
        "max": 64
      },
      "showInTableView": false
    },
    "defaultProjectFolderNameFormat": {
      "type": "String",
      "input": "Select",
      "choices": [
        "${projectName}",
        "${projectNumber}",
        "${projectNumber} ${projectName}",
        "${projectNumber}_${projectName}"
      ],
      "validate": {
        "max": 64
      },
      "showInTableView": false
    },
    "createdAtUTC": {
      "type": "DateTime",
      "showInTableView": "Created At"
    },
    "createdBy": {
      "type": "CrossReference",
      "input": {
        "name": "createdById",
        "type": "String"
      },
      "reference": {
        "type": "User",
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    },
    "updatedAtUTC": {
      "type": "DateTime",
      "showInTableView": "Updated At"
    },
    "updatedBy": {
      "type": "CrossReference",
      "input": {
        "name": "updatedById",
        "type": "String"
      },
      "reference": {
        "type": "User",
        "labelKey": "fullName",
        "valueKey": "_id"
      },
      "showInTableView": false
    }
  },
  "defaultSortField": "name",
  "defaultSortOrder": "ascend"
}
