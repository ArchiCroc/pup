{
  "name": "pup-plus",
  "version": "2.2.0",
  "description": "Get to the Fun Part Faster",
  "private": true,
  "repository": {
    "url": "git@archicroc:archicroc/pup-plus.git",
    "type": "git"
  },
  "author": "cleverbeagle <business@cleverbeagle.com>",
  "license": "MIT",
  "meteor": {
    "mainModule": {
      "client": "startup/client/index.js",
      "server": "startup/server/index.js"
    },
    "nodeModules": {
      "recompile": {
        "simpl-schema": "legacy",
        "query-string": "legacy",
        "strict-uri-encode": "legacy",
        "split-on-first": "legacy"
      }
    }
  },
  "scripts": {
    "dev": "meteor --settings settings-development.json --exclude-archs web.browser.legacy",
    "dev-all": "meteor --settings settings-development.json",
    "staging": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy pup-staging.cleverbeagle.com --settings settings-staging.json",
    "production": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy pup.cleverbeagle.com --settings settings-production.json",
    "profile": "meteor --extra-packages bundle-visualizer --production --settings settings-development.json",
    "lint": "eslint .",
    "lint:all": "eslint --fix .",
    "lint:file": "eslint --fix",
    "test": "jest",
    "test-watch": "jest --watch --verbose false",
    "test-e2e": "testcafe chrome:headless ui/**/*.e2e.js",
    "plop": "plop"
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "@apollo/react-ssr": "^4.0.0",
    "@babel/runtime": "^7.11.2",
    "@cleverbeagle/seeder": "^2.0.3",
    "antd": "^4.5.3",
    "apollo-server": "^2.16.1",
    "apollo-server-express": "^2.16.1",
    "apollo-utilities": "^1.3.4",
    "b64-to-blob": "^1.2.19",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "commonmark": "^0.29.1",
    "core-js": "^3.6.5",
    "file-saver": "^2.0.2",
    "graphql": "^14.7.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^5.0.0",
    "handlebars": "^4.7.6",
    "indexof": "0.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jszip": "^3.5.0",
    "juice": "^6.0.0",
    "lodash": "^4.17.19",
    "meteor-node-stubs": "^1.0.1",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "node-fetch": "^2.6.0",
    "polished": "^3.6.5",
    "prop-types": "^15.7.2",
    "query-string": "^6.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-markdown": "^4.3.1",
    "react-router": "^5.2.0",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.2.0",
    "sanitize-html": "^1.27.2",
    "simpl-schema": "^1.9.0",
    "slugify": "^1.4.5",
    "styled-components": "^5.1.1",
    "subscriptions-transport-ws": "^0.9.17",
    "uniforms": "^3.0.0-rc.2",
    "uniforms-antd": "^3.0.0-rc.2",
    "uniforms-bridge-simple-schema-2": "3.0.0-rc.2",
    "url-pattern": "^1.0.3",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-lodash": "^3.3.4",
    "enzyme": "^3.11.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-meteor": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-testcafe": "^0.2.1",
    "inquirer-file-selector-prompt": "^1.1.0",
    "inquirer-parse-json-file": "^1.0.2",
    "jest": "^26.3.0",
    "jest-cli": "^26.3.0",
    "lint-staged": "^10.2.11",
    "plop": "^2.7.4",
    "pluralize": "^8.0.0",
    "prettier": "^2.0.5",
    "testcafe": "^1.9.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "babel",
      "jest",
      "meteor",
      "prettier",
      "react",
      "testcafe"
    ],
    "extends": [
      "airbnb",
      "plugin:prettier/recommended",
      "plugin:meteor/recommended",
      "plugin:react/recommended",
      "plugin:testcafe/recommended",
      "plugin:jest/recommended"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "expect": false
    },
    "rules": {
      "arrow-parens": [
        2,
        "always"
      ],
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "indent": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ],
      "max-len": 0,
      "no-alert": 0,
      "no-console": 0,
      "no-restricted-globals": 0,
      "no-return-assign": [
        "error",
        "except-parens"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "__",
            "___",
            "_id",
            "_ids",
            "_str",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name",
            "_storedLoginToken"
          ]
        }
      ],
      "class-methods-use-this": 0,
      "prettier/prettier": 2,
      "react/jsx-filename-extension": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-props-no-spreading": 0
    },
    "settings": {
      "import/resolver": "meteor",
      "import/ignore": "^Uniforms."
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "./.githooks/pre-commit.sh",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "rangeStart": 0,
    "parser": "babel",
    "proseWrap": "preserve"
  }
}
